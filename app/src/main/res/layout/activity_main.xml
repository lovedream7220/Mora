<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txt_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="608dp"
        android:layout_marginLeft="608dp"
        android:layout_marginTop="176dp"
        android:text="123"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/txt_self"
        app:layout_constraintTop_toBottomOf="@+id/txt_self" />

    <TextView
        android:id="@+id/txt_winLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/txt_com"
        app:layout_constraintTop_toBottomOf="@+id/txt_com" />

    <EditText
        android:id="@+id/roomEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="edit"
        android:singleLine="true"
        android:textColor="#ff8c00"
        android:textColorHint="#238745"
        android:textScaleX="2"
        android:textSize="10dp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="@+id/txt_winLose"
        app:layout_constraintTop_toBottomOf="@+id/txt_winLose" />

    <Button
        android:id="@+id/initConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="initConnect"
        android:text="重新連線"
        app:layout_constraintStart_toStartOf="@+id/roomEditText"
        app:layout_constraintTop_toBottomOf="@+id/roomEditText" />

    <Button
        android:id="@+id/initStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="initStart"
        android:text="重新開始"
        app:layout_constraintStart_toStartOf="@+id/initConnect"
        app:layout_constraintTop_toBottomOf="@+id/initConnect" />

    <include
        android:id="@+id/include"
        layout="@layout/layout_choose"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_player"
        android:layout_width="158dp"
        android:layout_height="163dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cloth1"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/image_com"
        android:layout_width="158dp"
        android:layout_height="163dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloth1" />

</androidx.constraintlayout.widget.ConstraintLayout>