<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/image_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/image_self"
        app:layout_constraintTop_toBottomOf="@+id/image_self" />

    <TextView
        android:id="@+id/txt_com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/txt_self"
        app:layout_constraintTop_toBottomOf="@+id/txt_self" />

    <TextView
        android:id="@+id/txt_winLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/txt_com"
        app:layout_constraintTop_toBottomOf="@+id/txt_com" />

    <EditText
        android:id="@+id/roomEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="edit"
        android:singleLine="true"
        android:textColor="#ff8c00"
        android:textColorHint="#238745"
        android:textScaleX="2"
        android:textSize="10dp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="@+id/txt_winLose"
        app:layout_constraintTop_toBottomOf="@+id/txt_winLose" />

    <Button
        android:id="@+id/initConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="initConnect"
        android:text="重新連線"
        app:layout_constraintStart_toStartOf="@+id/roomEditText"
        app:layout_constraintTop_toBottomOf="@+id/roomEditText" />

    <Button
        android:id="@+id/initStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="initStart"
        android:text="重新開始"
        app:layout_constraintStart_toStartOf="@+id/initConnect"
        app:layout_constraintTop_toBottomOf="@+id/initConnect" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/twobtn"
        android:layout_margin="15dp"
        android:background="#000000"
        android:padding="150dp"
        app:layout_constraintBottom_toTopOf="@+id/include"
        tools:layout_editor_absoluteX="20dp" />

    <include
        android:id="@+id/include"
        layout="@layout/layout_choose"
        android:layout_width="372dp"
        android:layout_height="134dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>