<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <View
        android:id="@+id/lineY3"
        android:layout_width="2dp"
        android:layout_height="340dp"
        android:layout_above="@+id/twobtn"
        android:background="#000000"
        android:padding="150dp"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        tools:layout_editor_absoluteY="35dp" />

    <TextView
        android:id="@+id/txt_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="608dp"
        android:layout_marginLeft="608dp"
        android:layout_marginTop="176dp"
        android:text="123"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/txt_self"
        app:layout_constraintTop_toBottomOf="@+id/txt_self" />

    <TextView
        android:id="@+id/txt_winLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/txt_com"
        app:layout_constraintTop_toBottomOf="@+id/txt_com" />

    <EditText
        android:id="@+id/roomEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="edit"
        android:singleLine="true"
        android:textColor="#ff8c00"
        android:textColorHint="#238745"
        android:textScaleX="2"
        android:textSize="10dp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="@+id/txt_winLose"
        app:layout_constraintTop_toBottomOf="@+id/txt_winLose" />

    <Button
        android:id="@+id/initConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="initConnect"
        android:text="重新連線"
        app:layout_constraintStart_toStartOf="@+id/roomEditText"
        app:layout_constraintTop_toBottomOf="@+id/roomEditText" />

    <Button
        android:id="@+id/initStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="initStart"
        android:text="重新開始"
        app:layout_constraintStart_toStartOf="@+id/initConnect"
        app:layout_constraintTop_toBottomOf="@+id/initConnect" />


    <ImageView
        android:id="@+id/image_player"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="144dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloth1" />

    <ImageView
        android:id="@+id/image_com"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloth1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11192214" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8321168" />

    <View
        android:id="@+id/lineX0"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/twobtn"
        android:background="#000000"
        android:padding="150dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="0.319" />

    <View
        android:id="@+id/lineX"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/twobtn"
        android:background="#000000"
        android:padding="150dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4" />

    <View
        android:id="@+id/lineX1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/twobtn"
        android:background="#000000"
        android:padding="150dp"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        tools:layout_editor_absoluteX="0dp" />

    <View
        android:id="@+id/lineY1"
        android:layout_width="2dp"
        android:layout_height="340dp"
        android:layout_above="@+id/twobtn"
        android:background="#000000"
        android:padding="150dp"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        tools:layout_editor_absoluteY="16dp" />

    <View
        android:id="@+id/lineY0"
        android:layout_width="2dp"
        android:layout_height="340dp"
        android:layout_above="@+id/twobtn"
        android:background="#000000"
        android:padding="150dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <View
        android:id="@+id/lineY2"
        android:layout_width="2dp"
        android:layout_height="340dp"
        android:layout_above="@+id/twobtn"
        android:background="#000000"
        android:padding="150dp"
        app:layout_constraintStart_toStartOf="@+id/guideline10"
        tools:layout_editor_absoluteY="16dp" />

    <View
        android:id="@+id/lineY6"
        android:layout_width="2dp"
        android:layout_height="340dp"
        android:layout_above="@+id/twobtn"
        android:background="#000000"
        android:padding="150dp"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        tools:layout_editor_absoluteY="16dp" />

    <include
        android:id="@+id/include"
        layout="@layout/layout_choose"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/include"
        layout="@layout/layout_hpmp"
        android:layout_width="729dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="2dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.59" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />
</androidx.constraintlayout.widget.ConstraintLayout>